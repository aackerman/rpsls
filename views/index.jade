extends layout

block content
	div.row.relative
		div.row.first.center
			div.main-img.scissors
				img(src="/img/scissors.png")
		div.row.second
			div.main-img.lfloat
				img(src="/img/spock.png")
			div.main-img.rfloat
				img(src="/img/paper.png")
		div.row.third
			div.main-img.lfloat
				img(src="/img/lizard.png")
			div.main-img.rfloat
					img(src="/img/rock.png")
	div.row.span-half.nbcf
		p Smack Talk
		div#chat
		div.chat-input
			input(type='text', name='chat')
	div.row.span-half.nbcf
		p Players
		div#players
	div.overlay.nick-overlay
		div.overlay-bg
		div.overlay-content
			button.btn.quick-start Quick Start
			button.btn.login-start Login with Twitter
			input(type='text', name='nickname', placeholder='nickname')
			button.btn.start start